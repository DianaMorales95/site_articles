

{% extends 'base.html.twig' %}

{% block stylesheets %}
 <link rel="stylesheet" href="{{ asset('build/app.css') }}" >
{% endblock %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post" class="form">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="title_form">Connexion</h1>
    <label for="inputMail">Mail</label>
    <input type="text" value="{{ last_username }}" name="mail" id="inputMail" class="form-control input_text" required autofocus>
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control input_text" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="input_boton" type="submit">
        Se connecter
    </button>
</form>
{% endblock %}
