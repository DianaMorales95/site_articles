

{% extends 'base.html.twig' %}

{% block stylesheets %}
 <link rel="stylesheet" href="{{ asset('build/app.css') }}" >
{% endblock %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post" class="form">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté comme {{ app.user.username }}, <a href="{{ path('index') }}">Déconnexion</a>
        </div>
    {% endif %}

    <h1 class="title_form">Connexion</h1>
    <label for="inputMail">Mail</label>
    <input type="text" value="{{ last_username }}" name="mail" id="inputMail" class="form-control input_text" required autofocus>
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control input_text" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >


    <button class="input_boton" type="submit">
        Se connecter
    </button>
    <a href="{{ path('app_register') }}">Inscription</a>
</form>
{% endblock %}
